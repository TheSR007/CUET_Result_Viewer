{
  "manifest_version": 2,
  "name": "CUET Result Viewer",
  "version": "1.2",
  "description": "Calculates CGPA from the CUET result page with additional features like Target CGPA Calculator and What-If Grade Simulator",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_title": "CUET Result Viewer",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "96": "icons/96.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://course.cuet.ac.bd/result_published.php"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  }
}